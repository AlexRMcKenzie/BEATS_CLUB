<div class="container" data-controller="tabs">

  <div class="name">
    <%= image_tag "profi.jpg", class:"avatar-bordered" %>

    <h1><%= current_user.profiles[0].first_name %></h1>
    <p><%= current_user.profiles[0].bio %></p>
    <% if @user_check %>
      <%= link_to edit_profile_path(@profile) do %>
      Edit Profile <i class="fa-regular fa-pen-to-square"></i>
      <% end %>
    <% end %>

  </div>

  <div class="info">
    <div>
      <p><%= Community.where(profile_id: current_user.profiles[0].id).count %></p>
      <p data-action="click->tabs#displayCreated" data-tabs-target="createdLink">Clubs Created</p>
    </div>

    <div>
      <p><%= current_user.profiles[0].join_communities.count %></p>
      <p data-action="click->tabs#displayJoined" data-tabs-target="joinedLink">Clubs Joined</p>
    </div>

  </div>

  <div class="cards" data-tabs-target="created">
    <%  Community.where(profile_id: current_user.profiles[0].id).each do |community| %>
      <%= link_to community_path(community) do %>
        <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://i.pinimg.com/736x/77/67/5d/77675dfa144fff36f01509ff5d073fc5.jpg)">
          <p><%= community.name.truncate(35) %></p>
        </div>
      <% end %>
    <% end %>
  </div>

  <div class="cards" data-tabs-target="joined">
    <%# <h4 style="color:white;">Joined cards</h4> %>
    <% current_user.profiles[0].join_communities.each do |join_community| %>
      <%= link_to community_path(join_community.community) do %>
        <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://i.pinimg.com/736x/77/67/5d/77675dfa144fff36f01509ff5d073fc5.jpg)">
          <p><%= join_community.community.name.truncate(35) %></p>
        </div>
      <% end %>
    <% end %>
  </div>
</div>

