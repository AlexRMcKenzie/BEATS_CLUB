<%= simple_form_for([community, post],
  data: {
    insert_post_target: "form",
    action:"submit->insert-post#send"
  }) do |f|
%>
  <div class="post-form">
    <div  style="position: relative;">
      <%= f.input :content, label: false, placeholder: "Write a post here", class: "form-control-com" %>
      <%= f.input :photo, label: false, as: :file, placeholder: "Add your photo here..." %>
      <%= f.submit "Post", class:"btn btn-primary" %>
    </div>
  </div>
<% end %>
