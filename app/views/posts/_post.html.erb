<div class="card-trip">
  <div class="club-post-infos">
    <p><img src="https://i.pravatar.cc/40?img=1" alt="user__image" class="card-user-avatar"></p>
     <p class="nick-name"><%= post_profile_likes[1].nickname %></p>
      <p><%= "posted 4 mins ago" %></p>
  </div>
   <div> <%= cl_image_tag post_profile_likes[0].photo.key, alt:"card__image", class:"post-banner-com" if post_profile_likes[0].photo.attached? %></div>
   <div class="post-like-edit">
    <% if user_signed_in? %>
          <% unless post_profile_likes[2].map(&:profile_id).include? current_user.id %>
          <%= button_to like_community_post_path(post_profile_likes), {post_id: @post.id}, method: :post do %>
          <i class="fa-regular fa-heart"></i>
          <% end %>
            <% else %>
          <%= button_to unlike_community_post_path(post_profile_likes), {post_id: @post.id}, method: :post do %>
          <i class="fa-solid fa-heart"></i>
          <% end %>
        <% end %>
        <p><%= pluralize(post_profile_likes[2].length, 'like') %></p>
        <% end %>
    <div>
        <% if user_signed_in? && post_profile_likes[1].id == current_user.id %>
        <p><%= link_to "Edit Post", edit_community_post_path(@community, post_profile_likes[0])%>
        <% end %>
      </div>
      <div class="post-content">
      <%= post_profile_likes.first.content %>
      </div>
  </div>
</div>
