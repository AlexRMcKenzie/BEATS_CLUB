<h1><%= @genre.name %></h1>
<%# FOLLOW GENRE %>
<% if !@joined  %>
<%= link_to "Follow #{@genre.name}", genre_join_genres_path(@genre), data: { turbo_method: :post }, class:"btn btn-primary"%>
<% else %>
<%= link_to "Unfollow #{@genre.name}", genre_join_genre_path(@genre, current_user.id), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}, class:"btn btn-primary"%>
<% end %>
<h3><%= "#{@genre.name} Communities" %></h3>
<ul>
  <% @genre_communities.each do |community|%>
  <li><%= link_to community.name, community_path(community) %></li>
  <% end %>
</ul>
<h3><%= "Friends of #{@genre.name}" %></h3>
<ul>
  <% @genre_profiles.each do |profile|%>
  <li><%= link_to profile.nickname, profile_path(profile) %></li>
  <% end %>
</ul>
