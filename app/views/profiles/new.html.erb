<div class="container">
  <div class="create-profile-title">
   <h1>Create Your Profile</h1>
  </div>
  <br>
  <div class="profile-form">
  <%= simple_form_for @profile do |f| %>
    <%= f.input :nickname, label:false %>
    <%= f.input :first_name, label: false %>
    <%= f.input :last_name, label: false %>
    <%= f.input :location, label:false %>
    <%= f.input :bio, label:false %>
    <%= f.submit "Create Profile", class: "btn btn-flat", style: "display:block; margin: 0 auto;"%>
  <% end %>
  </div>
</div>
