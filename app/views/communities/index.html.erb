
<div class="container">

<%= simple_form_for :search, url: root_path, method: :get do |f| %>
  <div class="search-form-control-com form-group">
    <input class="form-control-com string required" type="text" name="search[query]" id="search_query" />
    <button name="button" type="submit">
      <i class="fas fa-search"></i> Search
    </button>
  </div>
<% end %>

 <div class="cards">
      <% @communities.each do |community| %>
        <%= link_to community_path(community) do  %>
          <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://i.pinimg.com/474x/f4/65/a2/f465a256777751abf54ff379c6c1cd99.jpg)">
            <p><%= community.name %></p>
          </div>
        <% end %>
      <% end %>
    </div>


    </div>
