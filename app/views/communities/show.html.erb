<div class="container">

  <div class="com-info">
    <h2><%= @community.name %> </h2>
    <p><%= pluralize(@profiles.nil? ? 0 : @profiles.length, 'Member') %></p>
    <p>Genre: <%= link_to @community.genre.name, genre_path(@community.genre), class:"btn"%></p>


    <% if user_signed_in? %>
      <%# JOIN COMMUNITY BUTTON %>
      <% if @user_check && @joined  %>
        <p><%= "You are the creator of this community and have been a member since #{@community.created_at.strftime("%B  %Y")}" %></p>
      <% elsif @user_check && !@joined  %>
        <p>You are the creator of this community</p>
        <%= link_to "Rejoin Community", community_join_communities_path(@community), data: { turbo_method: :post }, class:"btn btn-primary"%>
      <% elsif !@user_check && @joined  %>
        <p><%= "You have been a member since #{@community.created_at.strftime("%B  %Y")}" %></p>
      <% elsif !@user_check && !@joined  %>
        <%= link_to "Join Community", community_join_communities_path(@community), data: { turbo_method: :post }, class:"btn btn-primary"%>
      <% end %>

      <%# EDIT COMMUNITY BUTTON %>
      <% if @user_check %>
        <%= link_to edit_community_path(@community) do%>
        Edit Community <i class="fa-regular fa-pen-to-square"></i>
        <% end %>
      <% end %>

      <br>
      <%# <h2><%= pluralize(@profiles.nil? ? 0 : @profiles.length, 'Member') %>
      <%# </h2>
      <%# <ol>
      <%# <% @profiles.each do |profile|%>
      <%#   <li>
      <%#     <%= link_to "#{profile.nickname}#{@community.profile_id == profile.id ? ' (creator)' : ''}", profile_path(profile) %>
      <%#   </li>
      <%# <% end %>
      <%# </ol> %>
    <% end %>
  </div>

  <div data-controller="test">
    <h2> Posts </h2>
    <div>
      <% @posts_profiles_likes.each do |post_profile_likes|%>
        <p>
          <ul>
            <%= render "posts/post", post_profile_likes: post_profile_likes %>
          </ul>
        </p>
      <% end %>
    </div>

    <% if user_signed_in? %>
      <div class="form">
        <%= render 'posts/form', community: @community, post: @post %>
      </div>
    <% end %>
  </div>

</div>


