<h1><%= @community.name %> </h1>
<p>Description:</p>
<h2><%= @community.description %> </h2>
<% unless @community.location.nil? %>
  <p>Location:</p>
  <h2><%= @community.location %> </h2>
<% end %>
<br>
<h2> Participating Members </h2>
<ol>
<% @profiles.each do |profile|%>
 <li> <%= profile.nickname %> </li>
 <% end %>
</ol>

<h2> Posts </h2>
<% @posts_profiles.each do |post_profile|%>
  <p>
    <ul>
      <%= post_profile.first.content %>
      <li>Posted by <em><%= post_profile.last.nickname %></em> <%= time_ago_in_words(post_profile.first.created_at) %> ago</li>
      <li><%= pluralize(post_profile.first.likes, 'like') %> </li>
      <li>Like</li>
    </ul>
  </p>
 <% end %>

<h5>Add your post</h5>
<%= simple_form_for [@community, @post] do |f| %>
  <%= f.input :content, placeholder: "Add your post here..." %>
  <%= f.submit class:"btn btn-primary" %>
<% end %>
